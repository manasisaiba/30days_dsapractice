#include <bits/stdc++.h>
using namespace std;
 
int getMinSum(int arr[],int n){
	int i=0, sum=0;
 
	priority_queue<int,vector<int>,greater<int> >pq;
 
	for(int i=0;i<n;i++){
		pq.push(arr[i]);
	}
	while(pq.size()>1){
		int a=pq.top();
		pq.pop();
		int b= pq.top();
		pq.pop();
 
		sum+=(a+b);
		pq.push(a+b);
 
	}
	return sum;
}
 
int main()
{
 
    int arr[] = { 1, 3, 7, 5, 6 };
    int n = sizeof(arr)/sizeof(arr[0]);
    cout << (getMinSum(arr, n));
}
